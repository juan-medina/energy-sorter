<Project Sdk="Godot.NET.Sdk/4.5.1">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net9.0</TargetFramework>
		<EnableDynamicLoading>true</EnableDynamicLoading>
		<RootNamespace>EnergySorter</RootNamespace>
	</PropertyGroup>

	<!-- Run version bump before every build -->
	<Target Name="BumpGodotVersion" BeforeTargets="BeforeCompile">
		<Exec Command="python &quot;$(ProjectDir)src/scripts/version.py&quot; &quot;$(ProjectDir)project.godot&quot;" />
	</Target>

</Project>
